	public int del(String sj) {
		String[] id=sj.split(",");
		int count=0;
		for(int i=0;i<id.length;i++){
			String sql = "delete from TB_GW where id="+id[i];
//			System.out.println(sql);
			count+=jdbcTemplate.update(sql);
		}
		return count;
	}

