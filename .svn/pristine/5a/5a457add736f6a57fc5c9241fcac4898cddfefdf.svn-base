        <script type="text/javascript" src="resources/plugins/layui/layui.js"></script>
        <script>
        layui.use(['layer'], function() {
        	var $ = layui.jquery,
        		layer = layui.layer;
        	$('.loginbtn').on('click',function(){
            	if($('.loginuser').val()=='admin' && $('.loginpwd').val()=='admin'){
    	        	window.location='index.html';
            	}else{
            		layer.msg('账号密码不正确');
            	}
            });
        });
        </script>
